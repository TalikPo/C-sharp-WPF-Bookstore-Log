<Window x:Class="Книгарня.View.DiscountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Книгарня.View"
        mc:Ignorable="d"
        Title="Форма для заповнення знижки" Height="150" Width="250" WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <TextBlock Text="Відсоток знижки    " VerticalAlignment="Center" FontSize="20" ></TextBlock>
        <TextBox x:Name="discountTbx" Width="33" Height="20" FontSize="15"></TextBox>
        </StackPanel>
        <Button x:Name="discountBttn" Content="Врахувати" Width="77" Margin="0,10,0,0" Click="discountBttn_Click" MouseEnter="discountBttn_MouseEnter"/>
    </StackPanel>
</Window>
